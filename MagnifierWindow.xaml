<Window x:Class="Huey.MagnifierWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Width="150" Height="150"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        ShowInTaskbar="False"
        ResizeMode="NoResize"
        IsHitTestVisible="False">
    <Border CornerRadius="8" BorderBrush="Gray" BorderThickness="2" Background="#CCFFFFFF">
        <Image x:Name="MagnifierImage" Stretch="Fill" Width="146" Height="146"/>
    </Border>
</Window> 